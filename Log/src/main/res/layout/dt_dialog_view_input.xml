<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/solid_dialogtz"
    android:orientation="vertical" >


    <com.keyhua.renameyourself.view.CleareditTextView
        android:id="@+id/tv_dialog_ctv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="请输入轨迹名"
        android:padding="10dp"
        android:singleLine="true"
        android:gravity="center"
        android:textColorHighlight="@color/content"
        android:textColorHint="@color/content"
        android:textSize="14dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_margin="5dp"
        android:background="@color/videoview" />

    <TextView
        android:id="@+id/tv_dialog_btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="确定"
        android:textColor="@color/content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/videoview" />

    <TextView
        android:id="@+id/tv_dialog_btn3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="取消"
        android:textColor="@color/content" />


</LinearLayout>